# Network Daemon Configuration file
[general]
devlist=Execute:@prefix@/share/lxnm/devlist.sh
iflist=Execute:@prefix@/share/lxnm/iflist.sh

[modem]
info=Execute:@prefix@/share/lxnm/modeminfo.sh
detect=Internal

[ppp]
info=Execute:@prefix@/share/lxnm/pppinfo.sh

[ethernet]
up=Execute:@prefix@/share/lxnm/ethup.sh
down=Execute:@prefix@/share/lxnm/ethdown.sh
repair=Execute:@prefix@/share/lxnm/ethrepair.sh
info=Execute:@prefix@/share/lxnm/ethinfo.sh

[wireless]
up=Execute:@prefix@/share/lxnm/wifiup.sh
down=Execute:@prefix@/share/lxnm/wifidown.sh
repair=Execute:@prefix@/share/lxnm/wifirepair.sh
connect=Execute:@prefix@/share/lxnm/wificonnect.sh
scan=Execute:@prefix@/share/lxnm/wifiscan.sh
info=Execute:@prefix@/share/lxnm/wifiinfo.sh
